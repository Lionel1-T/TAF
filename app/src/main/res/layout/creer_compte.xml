<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="10dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Pseudo"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Entrez votre pseudo"
        android:id="@+id/pseudo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        />
    <Space
        android:layout_width="10dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:textSize="24dp"
        android:text="Email"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Entrez votre  Email"
        android:id="@+id/Email"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        />
    <Space
        android:layout_width="10dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Mot de Passe"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Entrez votre Nom"
        android:id="@+id/password"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        />
    <Space
        android:layout_width="10dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Confirmer le mot de passe"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Entrez le meme mot de passe "
        android:id="@+id/confirmer"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        />
    <Space
        android:layout_width="10dp"
        android:layout_height="50dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Creer Compte"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        />

    <Space
        android:layout_width="10dp"
        android:layout_height="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="________________"
            android:gravity="center_horizontal"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:text="ou"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="________________"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Continuer avec Google"
        android:textColor="#2196F3"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="23dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal">
        <Space
            android:layout_width="10dp"
            android:layout_height="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Vous n'avez pas de compte?"
            android:textColor="@color/purple_700"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Creer un compte"
            android:textColor="#2196F3"
            />
    </LinearLayout>

</LinearLayout>